{
  "extends": ["config:base"],
  "timezone": "Asia/Tokyo",
  "enabledManagers": ["npm"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "matchPackagePatterns": ["*"]
    },
   {
      "matchDepTypes": ["dependencies"],
      "groupName": "dependencies"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "groupName": "devDependencies"
    }
  ]
}
